<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.MonumentDetailPage"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edytuj" Clicked="EditMonument_Clicked" />
        <ToolbarItem Text="Usuń" Clicked="DeleteMonument_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Nazwa:" FontSize="Medium" />
            <Label Text="{Binding Monument.Name}" FontSize="Small"/>
            <Label Text="Lokalizacja:" FontSize="Medium" />
            <Label Text="{Binding Monument.Location}" FontSize="Small"/>
            <Label Text="Opis:" FontSize="Medium" />
            <Label Text="{Binding Monument.Description}" FontSize="Small"/>
        </StackLayout>
        </ContentPage.Content>
</ContentPage>